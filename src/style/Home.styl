&_content-home
  margin 0
&_content-sprites
  ul
    list-style-type: none
    li
      display inline-block


&_grid
  list-style: none
  padding: 0
  margin: 0 auto
  &__item
    font-size: 0.75rem
    background-color: #ccc
    border-radius: 3px
    border: 1px solid #aaa
    background white
    width 250px
    p
      text-align: left
      margin: 0.5em 0
    *
      &:first-child
        margin-top: 0
      &:last-child
        margin-bottom: 0
    img
      width 100%
    .footer
      height 45px
      padding: 15px
  &__header
    height 60px
    padding: 15px
    a
      height 60px
      img
        width 28px
        height 28px
    span
      color black
      display inline-block
      margin-left 10px
      font-size 14px
      .username
        font-size 10px
        color gray
