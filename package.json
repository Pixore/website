{
  "name": "pixelz",
  "version": "0.1.0",
  "description": "A editor for pixel art",
  "main": "index.js",
  "homepage": "http://pixelzstudio.com",
  "scripts": {
    "build": "env-cmd ./.env.prod webpack --config ./config/webpack.config.js",
    "prebuild": "rimraf build",
    "server": "node ./scripts/start.js",
    "start": "env-cmd ./.env yarn run server",
    "lint": "eslint ./src",
    "test:single": "karma start --single-run",
    "test:watch": "karma start --auto-watch",
    "test:main": "yarn run lint && yarn run test:single",
    "test": "env-cmd ./.env.test yarn run test:main"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-jsx"
    ],
    "plugins": [
      "standard"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "ecmaVersion": 6
      }
    },
    "globals": {
      "$": true,
      "it": true,
      "describe": true,
      "before": true,
      "beforeEach": true
    },
    "rules": {
      "id-length": [
        "error",
        {
          "exceptions": [
            "_",
            "y",
            "x",
            "r",
            "g",
            "b",
            "a",
            "j",
            "i",
            "$"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    }
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react"
    ],
    "ignore": [
      "config/webpackHotDevClient.js",
      "node_modules"
    ]
  },
  "keywords": [
    "express",
    "webpack",
    "pixel",
    "art"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/albizures/pixelz"
  },
  "author": "Jose Albizures <albizures3601@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "bluebird": "^3.4.6",
    "classnames": "^2.2.5",
    "lodash.defaults": "^4.2.0",
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "milligram-stylus": "^1.3.0",
    "normalize.css": "^5.0.0",
    "prop-types": "^15.5.8",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-dynamic-modal": "^1.1.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-stonecutter": "^0.3.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-es2015-destructuring": "^6.19.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "env-cmd": "^4.0.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-standard": "^2.0.1",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "image-webpack-loader": "^3.1.0",
    "imports-loader": "^0.7.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "karma-webpack-with-fast-source-maps": "^1.10.0",
    "mocha": "^3.2.0",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "react-addons-test-utils": "^15.4.1",
    "react-dev-utils": "^0.4.2",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "uglify-js": "^2.8.22",
    "uglifyjs-webpack-plugin": "^0.4.2",
    "webpack": "^2.3.3",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.17.1"
  }
}
